</head>
<body>
    <div style="background:url(/content/images/cover.jpg) no-repeat center center;" class="cover cover-border">
    </div>
    <div class="row main-container">
        <div class="col-lg-3 col-md-3 d-sm-none d-none d-md-block">
            {{> "left-navbar"}}
        </div>
        <div class="col-lg-6 col-md-9 col-12 container">
            <div class="row">                
                <div class="col-12 main-col">
                    {{{body}}}
                </div>
                {{#if @labs.subscribers}}
                <div class="col-md-10 d-sm-none d-none d-md-block main-col">
                    <div class="subscribe-form">
                        {{subscribe_form}}
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
        <div class="col-lg-3 d-md-none d-sm-none d-none d-lg-block">
            {{> "right-navbar"}}
        </div>
    </div>

    <footer class="page-footer">
      <div class="container">
          <i class="el el-heart footer-icon"></i>
            &copy; {{date format="YYYY"}} <a href="{{@site.url}}">{{@site.title}}</a> All rights reserved.
      </div>
    </footer>

    <a href="#" class="back-to-top"><span class="fa fa-angle-up fa-2x"></span></a>

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! The main JavaScript file for Casper }}
    <script src="{{asset "js/modernizr.js"}}"></script>
    <script type="module" src="{{asset "js/index.js"}}"></script>

</body>
</html>
