{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

{{#contentFor "initHighlight"}}
    <script>hljs.initHighlightingOnLoad();</script>
{{/contentFor}}




<main  role="main">

    <article class="row justify-content-center {{post_class}}">

        <header class="col-lg-10 col-12">
        <div class="no-margin no-padding post">
            <h1 class="title">
            {{title}}

            </h1>
            <div class="subhead"> Posted on <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DDÏùº, YYYY"}}</time> {{#if tags}}<br> tags:{{tags prefix="<span class='fa fa-tags'></span>&nbsp;"}} {{/if}}</div>
            <hr>
        </div>
        

        </header>
        <section class="col-lg-11 col-12">
            {{content}}
        </section>

        <footer class="col-12 author">
            
            <hr>
  {{#if authors}}
    <ul>
    {{#foreach authors}}
      <li>
        <a href="{{url}}" title="{{name}}" class="author author-{{id}} {{slug}}">{{name}}</a>
      </li>
    {{/foreach}}
    </ul>
  {{/if}}
      
        </footer>

    </article>
    
